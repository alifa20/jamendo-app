{
  "private": true,
  "name": "@jamendo/rtk-services",
  "version": "1.0.0",
  "description": "Redux Toolkit Query services for Jamendo API",
  "author": "Ali Fathieh",
  "license": "MIT",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "lint": "eslint --ext js,ts,tsx .",
    "test": "jest"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.1",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@jamendo/eslint-config": "workspace:*",
    "@tsconfig/recommended": "^1.0.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "msw": "^2.12.2",
    "ts-jest": "^29.4.5"
  },
  "eslintConfig": {
    "extends": "@jamendo/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/__tests__/**"
    ]
  }
}
